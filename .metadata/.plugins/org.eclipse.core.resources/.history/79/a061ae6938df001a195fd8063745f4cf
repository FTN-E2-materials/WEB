const login = { template : '<login></login>' }


const router = new VueRouter({
    mode : 'hash',
    routes : [
        { path : '/login', component: login }
    ]
});

var app = new Vue({
    router: router, 
    el: '#webApp',
    data: {
    	mode : "notLogged"
    }
    mounted() {
    	.get("/user/seeIfLogged")
    	.then(response => {
    		if (response.data == "") {
    			this.mode = "notLogged";
    		} else if (response.data == "guest") {
    			this.mode = "guest";
    		} else if (response.data == "host") {
    			this.mode = "host";
    		} else if (response.data == "admin") {
    			this.mode = "admin";
    		}
    	})
    }
});